                    pointRadius: 4,
                    pointHoverRadius: 6
                }]
            };
            
            trendChart = new Chart(ctxTrend, {
                type: 'line',
                data: mockTrendData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            backgroundColor: '#fff',
                            titleColor: '#111',
                            bodyColor: '#555',
                            borderColor: '#e5e7eb',
                            borderWidth: 1,
                            padding: 10,
                            displayColors: false,
                            callbacks: {
                                label: function(context) {
                                    return formatCurrency(context.parsed.y);
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { borderDash: [4, 4] },
                            ticks: {
                                callback: function(value) {
                                    return '₺' + value / 1000 + 'k';
                                }
                            },
                            border: { display: false }
                        },
                        x: {
                            grid: { display: false },
                            border: { display: false }
                        }
                    }
                }
            });


            // 2. City Chart (Vertical Bar) - ADET OLARAK GÜNCELLENDİ
            const ctxCity = document.getElementById('cityChart').getContext('2d');
            const mockCityData = {
                labels: ['İstanbul', 'Ankara', 'İzmir', 'Bursa', 'Antalya', 'Diğer'],
