                    data: [120, 80, 70, 45, 40, 30],
                    backgroundColor: BRAND_COLOR,
                    borderRadius: 4,
                    barThickness: 40
                }]
            };
            
            cityChart = new Chart(ctxCity, {
                type: 'bar',
                data: mockCityData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            backgroundColor: '#374151',
                            padding: 10,
                            cornerRadius: 4,
                            callbacks: {
                                label: (context) => formatNumber(context.raw) + " Adet"
                            }
                        }
                    },
                    scales: {
                        y: { display: false },
                        x: {
                            grid: { display: false },
                            border: { display: false },
                            ticks: { font: { size: 11 } }
                        }
                    }
                }
            });

            // 3. YENİ Kırılım Grafikleri (Pie)
            const currencyTooltip = (ctx) => {
                if (!ctx.raw) return " 0";
                const sum = ctx.chart.data.datasets[0].data.reduce((a, b) => a + b, 0);
                const percentage = sum > 0 ? ((ctx.raw / sum) * 100).toFixed(1) + '%' : '0%';
                return ` ${ctx.label}: ${formatCurrency(ctx.raw)} (${percentage})`;
            };
            const numberTooltip = (ctx) => {
                if (!ctx.raw) return " 0";
